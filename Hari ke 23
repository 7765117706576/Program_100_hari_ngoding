                harga_makanan=15000;
                default:
                System.out.println("Pesanan tidak tersedia");
            }
            
        }
        System.out.println("=================================");
       switch (pilihan_minuman){
       case 1:
       System.out.println("1.Es Teh manis\n2.Teh hangat manis\n3.Teh hangat tawar\nAll Rp. 5k");    
       System.out.print("Masukkan pilihan :");
       pilihan_minuman=input.nextInt();
           switch(pilihan_minuman){
                 case 1:
                 menu_minuman="Es Teh Manis";
