                menu_makanan="Nasi Goreng jakarta";
                System.out.print("Masukkan porsi :");
                porsi_makanan=input.nextInt();
                harga_makanan=15000;
                default:
                System.out.println("Pesanan tidak tersedia");
               }
            
       break;
